<div class="row">
  <div class="col m6 offset-m3 center">

    <br />
    <br />
    <h5>Welcome Back! Login</h5>
    <br/>
    
    <%= link_to "Log in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn blue darken-4" %>

      <p class="line">
      <span>OR</span>
      </p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= render partial: "shared/devisemes" %>  

      <div class="input-field">
        <%= f.email_field :email, :id => "email", :class => "validate", :placeholder => "Email" %>
      </div>

      <div class="input-field">
        <%= f.password_field :password, :id => "email", :class => "validate", :placeholder => "Password",autocomplete: "off" %>
      </div>

      <button class="btn waves-effect waves-light indigo accent-4" type="submit" name="action">
      Login</button>
      <p class="line center">
      <%= link_to "I forgot my password", new_user_password_path %>
      </p>
    <% end %>

    <p class="line">
         Need an account? <%= link_to "Create a Free Account", new_user_registration_path %>
    </p>

  </div>
</div>
