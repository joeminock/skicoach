<header>
	<nav class="blue darken-4 ">
		<div class="container">
			<div class="nav-wrapper">
				<a href="/" class="brand-logo ">SkiCoach.me</a>
				<a href="#" data-activates="mobile-demo" class="button-collapse" ><i class="mdi-navigation-menu"></i></a>
				<ul class="right hide-on-med-and-down">
					
				<% if(!user_signed_in?) %>
					<li><%= link_to "About", pages_about_path %></li>
					<li><%= link_to "Browse Lessons", project_index_path %></li>
					<li><%= link_to "Login", new_user_session_path %></li>
					<li><%= link_to "Sign Up", new_user_registration_path, class: "waves-effect waves-light btn indigo accent-4" %></li>
					
				<% else %>
					<li><%= link_to "Lessons", project_index_path %></li>
					<!-- Native Dropdown Trigger -->
					<li><a class="dropdown-button valign-wrapper" data-beloworigin="true" href="#!" data-activates="dropdown1">
						<%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
						<%= current_user.name %><i class="mdi-navigation-arrow-drop-down right"></i></a></li>
				<% end %>
				</ul>


				<ul class="side-nav" id="mobile-demo">
					<li><%= link_to "Choose a Lesson", project_index_path %></li>
					<% if(!user_signed_in?) %>
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
					<li><%= link_to "Login", new_user_session_path %></li>
				<% else %>
					<!-- Mobile Dropdown Trigger -->
					<li><a class="dropdown-button valign-wrapper" data-beloworigin="true" href="#!" data-activates="dropdown2">
						<%= image_tag avatar_url(current_user), class: "circle responsive-img" %>&nbsp;
						<%= current_user.name %><i class="mdi-navigation-arrow-drop-down right"></i></a></li>
				<% end %>
				</ul>
			</div>
		</div>
	</nav>
