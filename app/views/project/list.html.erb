<br />
<h5>My Lessons</h5>
<hr>

<div class="row" data-no-turbolink>

	<% if @projects.count > 0 %>

		<% @projects.each do |project| %>
			<%= link_to project do %>
				<div class="col s12 m6 l4">
					<div class="card">

							<div class="card-image">
								<%= image_tag project.image %>
							</div>
							
							<div class="card-content" style="height: 8em">
								<span class="card-title grey-text text-darken-4">
									<%= project.name %>
								</span>
							</div>	
						
						</div>
					</div>	
			<% end %>
		<% end %>
	<% else %>
		<div class="center">
			<h5>Oh No! You're not in any projects yet...<br />Let's Get You Started!</h5>
			<%= link_to "View All Projects", root_path, class: "btn btn-primary" %>
		</div>
	<% end %>
</div>

