<% if(!user_signed_in?) %>
	<!-- Start Index Container -->
<br />
  <div class="header_img"> 
  <section id="intro">
    
      <div class="container">
        <div class="row">
          <div class="col m5 s12">
            <br><br>
            <h1 class="header white-text">SKI LESSONS...<br/> ANYWHERE, ANYTIME</h1>
            <h5 class="header white-text">Extend the life of every ski lesson with video based drills and tasks that you can access at home, at work, and even on the ski lift.</h5>
            <br>

            <div class="row center">
                <%= link_to "Sign Up For My Free Account", new_user_registration_path, class: "btn-large waves-effect waves-light btn indigo accent-4" %>  
            </div>
          </div>
        <br>
      <br> 
    </div>
  </section>
  </div>
