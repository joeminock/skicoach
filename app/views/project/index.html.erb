	<title>Free and Premium Online Ski Lessons - SkiCoach.me</title>
	<meta name="description" content="" />

	<!-- Twitter Card data --> 
    <meta name="twitter:card" content="summary_large_image"> 
    <meta name="twitter:site" content="@skicoachme"> 
    <meta name="twitter:creator" content="@skicoachme">
    <meta name="twitter:title" content="SkiCoach.me Free and Premium Online Ski Lessons"> 
    <meta name="twitter:description" content="Find a Ski Lesson and Improve Your Skiing in an Hour">
    <!-- Twitter summary card with large image must be at least 280x150px --> 
