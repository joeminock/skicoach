<h5>Find a Lesson, it's time to <i>Get Skiing</i></h5>
<hr>
<div class="row" data-no-turbolink>

	<% @projects.each do |project| %>
		<%= link_to project do %>
			<div class="col s12 m6 l6">
				<div class="card hoverable">

					<div class="card-image">
						<%= image_tag project.image %>
					</div>
						
					<div class="card-content" style="height: 8em">
						<p class="flow-text grey-text text-darken-4"><%= project.name %></p>
						<pclass="grey-text text-darken-4"><%= project.s_description %></p>
						
					</div>	
					
				</div>
			</div>	
		<% end %>
	<% end %>
</div>